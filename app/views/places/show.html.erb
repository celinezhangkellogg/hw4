<div class = "container">


<h1><%= @place["name"] %></h1>

<p class="new">
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Post</a>
</p>


<div class = "row">
  <% for entry in @entries %>

  <div class = "col-md-4">
  <h2><%= entry["title"] %></h2>
  <p><%= entry["occurred_on"] %></p>
  <p><%= entry["description"] %></p>
  </div>

<% end %>

</div>

<p>
  <a href="/places">Back to All Places</a>
</p>

</div>